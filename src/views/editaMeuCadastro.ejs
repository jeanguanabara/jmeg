<!DOCTYPE html>
<html lang="pt-BR">
    <%- include ("./components/head.ejs") %> 
    <body>
      <%- include("./components/header.ejs")%> 
      
      <main>
        <section class="container d-flex flex-row"><!--  MENU LATERAL DO CLIENTE -->
            <div class="flex-shrink-0 p-3 bg-white rounded" style="width: 280px;">
                
                  
                  <span class="d-flex align-items-center pb-3 mb-3 link-dark text-decoration-none border-bottom fs-5 fw-semibold">Olá, USUARIO</span>
                
                <ul class="list-unstyled ps-0">
                  <li class="mb-1">
                    <button class="btn btn-dark d-inline-flex align-items-center rounded border-0" data-bs-toggle="collapse" data-bs-target="#home-collapse" aria-expanded="true">
                      Meu Cadastro
                    </button>
                    <div class="collapse show" id="home-collapse">
                      <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                        <li><a href="/editameucadastro" class="link-dark d-inline-flex text-decoration-none rounded ms-3 mt-2">Editar</a></li> <!-- OPÇÃO DE EDITAR CADASTRO -->
                      </ul>
                    </div>
                  </li>
                  <li class="mb-1">
                    <button class="btn btn-dark d-inline-flex align-items-center rounded border-0 collapsed" data-bs-toggle="collapse" data-bs-target="#dashboard-collapse" aria-expanded="false">
                      Meus Pedidos
                    </button>
                    <div class="collapse" id="dashboard-collapse">
                      <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                        <li><a href="#" class="link-dark d-inline-flex text-decoration-none rounded ms-3 mt-2">Visualizar Meus Pedidos</a></li>
                      </ul>
                    </div>
                  </li>
                  
                </ul>
              </div>
            <div class="mx-2 p-3 bg-dark rounded">
              <form class="" novalidate="">
                <div class="row g-3">
                  <div class="col">
                    <label for="Name" class="form-label">Nome</label>
                    <input type="text" class="form-control" id="Name" placeholder="" value="" required="">
                    
                  </div>
      
                  
      
                  <div class="col-md-3">
                    <label 
                    for="username" 
                    class="form-label" 
                     
                    >CPF</label>
                    <div class="input-group has-validation">
                      <input type="text" class="form-control" id="CPF" placeholder="" required="" maxlength="12" onkeypress="return event.charCode >= 48 && event.charCode <= 57">
                    
                    </div>
                  </div>
      
                  <div class="col-12">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="you@example.com">
                    
                  </div>

                  <div class="col-md-3">
                    <label for="zip" class="form-label">CEP</label>
                    <input type="number" class="form-control" id="cep" placeholder="00000000" required="" maxlength="8" >
                    
                  </div>

                  <div class="col-md-5">
                    <label for="country" class="form-label">Estado</label>
                    <input type="text" class="form-control" id="estado" placeholder="" value="" required="">
                    
                  </div>
      
                  <div class="col-md-4">
                    <label for="state" class="form-label">Cidade</label>
                    <input type="text" class="form-control" id="cidade" placeholder="" value="" required="">
                    
                  </div>
      
                  <div class="col-12">
                    <label for="address" class="form-label">Logradouro</label>
                    <input type="text" class="form-control" id="logradouro" placeholder="Rua a, N 85" required="">
                    
                  </div>
      
                  <div class="col-12">
                    <label for="address2" class="form-label">Complemento</label>
                    <input type="text" class="form-control" id="complemento" placeholder="Casa/Apartamento/Quadra">
                  </div>
      
                  
      
                  
                </div>
      
                
      
                
      
                
      
                  
      
                  
      
                 
      
                <hr class="my-4">
      
                <button class="w-100 btn btn-primary btn-lg" type="submit">Salvar</button>
              </form>   
            </div>
        </section>

      </main>

      <%- include("./components/footer.ejs") %>
</body>
</html>