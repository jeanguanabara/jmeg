<!DOCTYPE html>
<html lang="pt-br">
    <%- include ("./components/head.ejs") %>
    <style>
    body{
        height: 100vh;
        width: 100vw;
    }
    
    main{
        height: 100%;
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    section {
        box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.75);
    }
</style>
<body>
    <%- include ("./components/header.ejs")%>

    <main>
       
            <form action="/homecliente" method="POST" id="formLoginCliente"></form>


         
         
            <section class="rounded-4 text-center bg-white p-5">
                <img src="/img/svg/logo-ico.svg" class="m-4">
                <p>Digite seu email e senha:</p>

                <div class="form-floating text-secondary ">
                    <input type="email" class="form-control m-2" placeholder="Email" id="vLoginEmailCliente" name="vLoginEmailCliente">
                    <label for="vLoginEmailCliente">Email</label>
                </div>
                
                <div class="form-floating text-secondary">
                    <input type="password" class="form-control m-2" placeholder="Senha" id="vLoginSenhaCliente" name="vLoginSenhaCliente">
                    <label for="vLoginSenhaCliente">Senha</label>
                </div>

               
                <p class="text-danger" ><b> <%= error %></b></p>

                

            
                    
                
                <button class="btn btn-primary mt-3 mb-3" type="submit" form="formLoginCliente">Entrar / Cadastrar</button>

            </section>
        </form>
    </main>

    <%- include ("./components/footer.ejs")%>
</body>
</html>