<!DOCTYPE html>
<html lang="pt-BR">
  <%- include('./components/headAdmin.ejs') %>
  <body>
    <header class="bg-secondary p-1">
      <section
        class="container bg-white rounded-5 justify-content-between py-3"
      >
        <div
          class="d-flex flex-wrap align-items-center justify-content-between"
        >
          <ul
            class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0"
          >
            <li><a href="/homeadmin" class="btn btn-light m-1">Home</a></li>
            <li><a href="/produtosadmin" class="btn btn-light m-1">Cadastro Produtos</a></li>
            
          </ul>
  
          <div class="col-md-3 text-end">
  
          
          </div>
        </div>
      </section>
    </header>

    <main>
      <section class="p-6 m-6 d-flex justify-content-center">
        <form
          class="p-6 m-6"
          style="width: 30rem; height: 40rem"
          action="/homeadmin"
          method="post"
          id="formLoginAdmin"
        >
          <div class="rounded-4 text-center bg-white p-5">
            <img src="/img/svg/logo-ico.svg" class="m-4" />
            <p>Digite seu Nome e senha:</p>

            <div class="form-floating text-secondary">
              <input
                type="email"
                class="form-control m-2"
                placeholder="Email"
                name="vLoginEmailAdmin"
                id="vLoginEmailAdmin"
              />
              <label for="vLoginEmailAdmin">Nome</label>
            </div>

            <div class="form-floating text-secondary">
              <input
                type="password"
                class="form-control m-2"
                placeholder="Senha"
                name="vLoginSenhaAdmin"
                id="vLoginSenhaAdmin"
              />
              <label for="vLoginSenhaAdmin">Senha</label>
            </div>

            <p class="text-danger"><b> <%= error %></b></p>

            <button
              class="btn btn-primary mt-3 mb-3"
              type="submit"
              form="formLoginAdmin"
              value="submit"
            >
              Entrar
            </button>
          </div>
        </form>
      </section>
    </main>

    <%- include('./components/footerAdmin.ejs') %>
  </body>
</html>
