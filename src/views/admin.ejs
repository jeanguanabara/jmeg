<!DOCTYPE html>
<html lang="pt-BR">
  <%- include('./components/headAdmin.ejs') %>
  <body>
    <%- include('./components/headerAdmin.ejs') %>

    <main>
      <section class="p-6 m-6 d-flex justify-content-center">
        <form
          class="p-6 m-6"
          style="width: 30rem; height: 40rem"
          action="/homeadmin"
          method="post"
          id="formLoginAdmin"
        >
          <div class="rounded-4 text-center bg-white p-5">
            <img src="/img/svg/logo-ico.svg" class="m-4" />
            <p>Digite seu email e senha:</p>

            <div class="form-floating text-secondary">
              <input
                type="email"
                class="form-control m-2"
                placeholder="Email"
                name="vLoginEmailAdmin"
                id="vLoginEmailAdmin"
              />
              <label for="vLoginEmailAdmin">Email</label>
            </div>

            <div class="form-floating text-secondary">
              <input
                type="password"
                class="form-control m-2"
                placeholder="Senha"
                name="vLoginSenhaAdmin"
                id="vLoginSenhaAdmin"
              />
              <label for="vLoginSenhaAdmin">Senha</label>
            </div>

            <p class="text-danger"><b> <%= error %></b></p>

            <button
              class="btn btn-primary mt-3 mb-3"
              type="submit"
              form="formLoginAdmin"
              value="submit"
            >
              Entrar
            </button>
          </div>
        </form>
      </section>
    </main>

    <%- include('./components/footerAdmin.ejs') %>
  </body>
</html>
